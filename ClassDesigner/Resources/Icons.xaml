    <Style x:Key="RadioChecked" TargetType="TextBlock" BasedOn="{StaticResource IconBaseStyle}">
        <Setter Property="Text" Value="&#xea54;"/>
    </Style>
    <Style x:Key="RadioUnchecked" TargetType="TextBlock" BasedOn="{StaticResource IconBaseStyle}">
        <Setter Property="Text" Value="&#xea56;"/>
    </Style>
</ResourceDictionary>