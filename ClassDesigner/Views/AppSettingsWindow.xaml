<Window x:Class="ClassDesigner.Views.AppSettingsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClassDesigner.Views"
      xmlns:vm="clr-namespace:ClassDesigner.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppSettingsWindow">
    <Window.Resources>
        <vm:AppSettingsViewModel x:Key="viewModel"/>
    </Window.Resources>
    <Grid Background="White" DataContext="{StaticResource viewModel}">
        <StackPanel>
            <TextBlock Text="Масштаб интерфейса"/>
            <Slider x:Name="Scale" Minimum="1" 
                    Maximum="2"
                    TickPlacement="BottomRight" 
                    TickFrequency="0.1" 
                    IsSnapToTickEnabled="True" 
                    Value="{Binding SettingsService.InterfaceScale}">
            </Slider>
            <TextBlock Text="{Binding SettingsService.InterfaceScale, StringFormat=p0}"/>
        </StackPanel>
    </Grid>
</Window>
