<Window x:Class="ClassDesigner.Views.PropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassDesigner.Views"
        xmlns:vm="clr-namespace:ClassDesigner.ViewModels"
        xmlns:h="clr-namespace:ClassDesigner.Helping"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="PropertiesWindow" Height="450" Width="200">
    <Window.Resources>
        <vm:PropertiesViewModel x:Key="viewModel"/>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource viewModel}"/>
    </Window.DataContext>
    <Grid>
        <ContentControl Content="{Binding Item}" Template="{StaticResource PropertiesPanel}"/>
    </Grid>
</Window>
